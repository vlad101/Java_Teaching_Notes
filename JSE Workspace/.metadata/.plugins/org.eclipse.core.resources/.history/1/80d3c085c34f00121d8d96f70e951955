public class FindCharApp 
{
	public static void main(String[] args) 
	{
		String st = "String";
		findChar(st, 'g');
	}
	
	public static void findChar(String s, char c)
	{
		int min = 0;
		if(s.charAt(min) == c)
			System.out.println("The character is found!");
		else if(min == s.length() - 1)
			System.out.println("The character could not be found");
		else
		{
			min++;
			findChar(s , c);
		}
	}
}
