import java.util.Scanner;
import java.util.Random;

class Player
{
	private String name;
	
	public Player(String n)
	{
		name = n;
	}
}

class Dice
{
	private int value;
	
	public Dice()
	{
		value = 0;
	}
	
	public void rollDice()
	{
		Random random = new Random();
		value = random.nextInt(5) + 1;
		
	}
	
	public int getValue()
	{
		return value;
	}
	
	public static int rollDicePlayer()
	{
		Random random = new Random();
		return random.nextInt(5) + 1;
	}
	
}


public class TwentyOneApp {
	
	public static Scanner keyboard = new Scanner(System.in);

	public static void main(String[] args) 
	{
		
		String input = "";
		
		System.out.println("*************Twenty-One!*************");
		
		do
		{
			
			int numPlayers = validateInput("How many players are playing the game");
			Player[] players = new Player[numPlayers];
			
			Dice[]  // player is rolling the dice
			
			Dice[] diceComp = new Dice[2]; // computer is rolling the dice
			for(int j = 0; j < 2; j++)
			{
				diceComp[j] = new Dice();
				diceComp[j].rollDice();
			}
			
			for(int i = 0; i < players.length; i++)
			{
				System.out.printf("Enter name of player %d\n", i + 1);
				System.out.println("Start Rolling Dice to accumulate points");
				
				
			}
				
			
				
			
			System.out.println("Do you want to continue");
			
		}
		while(input.toLowerCase().charAt(0) == 'Y');
	}
		
	public static int validateInput(String st)
	{
		int num = 0;
		while(true)
		{
			try
			{
				do
				{
					System.out.print(st);
					num = Integer.parseInt(keyboard.nextLine());
					if(num <= 0)
						System.out.println("Wrong Value! Try again!");
				}
				while(num <= 0);
			}
			catch(NumberFormatException nfe)
			{
				System.out.println("Wrong Value! Try again!");
				continue;
			}
			return num;
		}
	}

}
