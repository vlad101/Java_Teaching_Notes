import java.util.Random;

class TwoDArray
{
	private int[][] array;
	private int rows;
	private int columns;
	
	public TwoDArray(int r, int c)
	{
		rows = r;
		columns = c;
		array = new int[rows][columns];
	}
	
	public void setArray()
	{
		Random random = new Random();
		int count = 0;
		for(int i = 0; i < rows; i++)
			for(int j = 0; j < columns; j++)
				array[i][j] = random.nextInt(10);
	}
		
	public int getTotal(){
		int count = 0;
		for(int i = 0; i < rows; i++)
			for(int j = 0; j < columns; j++)
				count += array[i][j];
		return count;
	}
	
	public int getAverage()
	{
		int count = 0;
		for(int i = 0; i < rows; i++)
			for(int j = 0; j < columns; j++)
				count += array[i][j];
		return count / (rows + columns);
	}
	
	public void displayArr()
	{
		for(int i = 0; i < rows; i++){
			for(int j = 0; j < columns; j++)
				System.out.print(array[i][j] + "   ");
			System.out.println();
		}
	}

}
		
public class TwoDArrayApp
{
	public static void main(String[] args)
	{
		final int ROWS = 5;
		final int COLUMNS = 5;
		
		TwoDArray arr = new TwoDArray(ROWS, COLUMNS);
		
		arr.setArray();
		
		arr.displayArr();
		System.out.println("The Total is " + arr.getTotal());
		System.out.println("The Average is " + arr.getAverage());
		
		// System.out.println("The Total of the Row is " + getRowTotal());
		// System.out.println("The Total of the column is " + getColumnTotal());
		// System.out.println("The Highest Number is the Row is " + getHighestInRow());
		// System.out.println("The Lowest Number in the Row is " + getLowestInRow()));
		
	}
}
