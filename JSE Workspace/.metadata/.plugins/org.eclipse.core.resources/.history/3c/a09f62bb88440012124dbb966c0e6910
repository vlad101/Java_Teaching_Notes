public class QuickSort 
{	
	public static void display(int[] array)
	{
		for(int j = 0; j < array.length; j++)
			System.out.print(array[j] + " ");
		System.out.println();
	}
	
	public static void quickSort(int array[],int lowerBound, int upperBound)
	{
		  int low = lowerBound;
		  int hi = upperBound;
		  if (low >= upperBound) {
		  return;
		  }
		  int mid = array[(low + hi) / 2];
		  while (low < hi) {
		  while (low<hi && array[low] < mid) {
		  low++;
		  }
		  while (low<hi && array[hi] > mid) {
		  hi--;
		  }
		  if (low < hi) {
		  int T = array[low];
		  array[low] = array[hi];
		  array[hi] = T;
		  }
		  }
		  if (hi < low) {
		  int T = hi;
		  hi = low;
		  low = T;
		  }
		  quickSort(array, lowerBound, low);
		  quickSort(array, low == lowerBound ? low+1 : low, upperBound);
		  }
	
	public static void main(String[] args) 
	{
		int[] array = {1,3,6,2};
		display(array);
		quickSort(array, 0, array.length - 1);
		display(array);
	}
}
