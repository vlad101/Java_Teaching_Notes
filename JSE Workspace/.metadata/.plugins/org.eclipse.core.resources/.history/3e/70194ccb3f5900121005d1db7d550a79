
public class PointApp
{
    public static void main(String[] args)
    {
    	System.out.println("2 * 3 = " + mult(2, 3));
    }
    
    public static double mult(double num1, doouble num2)
    {
    	if(num2 == 0)
    		return 0;
    	else
    		return num1 + mult(num1, num2 - 1);
    }
}