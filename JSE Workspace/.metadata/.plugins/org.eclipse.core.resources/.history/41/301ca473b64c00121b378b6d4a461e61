import java.util.Random;
import java.util.Scanner;

public class RockPaperScissors {
		
	public static void main(String[] args) {
		do{
			displayMenu();
			int choice = validateInput("Make a Choice: ");
			String userOption = "";
			
			if(choice == 1)
				userOption = "rock";
			else if(choice == 2)
				userOption = "scissors";
			else if(choice == 3)
				userOption = "paper";
			else if(choice == 4)
			{
				System.out.println("Thank you for playing! Bye-bye!");
				break;
			}
			else
				System.out.println("Make a valid choice!");
			String compOption = generate();  // computers option
			gameResult(userOption, compOption); // outcome of the game 
			displayMenu();	// displays menu
		}while(true);
		
	}
	
	public static void gameResult(String userChoice, String compChoice)
	{
		System.out.println("Your choice was " + userChoice);
		System.out.println("Computer's choice was " + compChoice);
		
		if(userChoice == "rock" && compChoice == "scissors")
			System.out.println("You won! The rock smashes the scissors!");
		
		else if(userChoice == "scissors" && compChoice == "rock")
			System.out.println("You lost! The scissors got smashed by the rock!");
		
		else if(userChoice == "scissors" && compChoice == "paper")
			System.out.println("You won! The scissors cuts the paper!");
		
		else if(userChoice == "paper" && compChoice == "scissors")
			System.out.println("You lost! The paper was cut by the scissors!");
		
		else if(userChoice == "paper" && compChoice == "rock")
			System.out.println("You won! The paper wraps the rock!");
		
		else if(userChoice == "rock" && compChoice == "paper")
			System.out.println("You lost! The rock was wrapped by the paper!");
		
	}
	
	public static String generate()
	{
		Random random = new Random();
		String[] choice = {"rock", "scissors", "paper"};
		return choice[random.nextInt(3)];
	}
	
	public static void displayMenu()
	{
		System.out.println("****Rock, Paper, Scissors Game*****");
		System.out.println("1. Rock");
		System.out.println("2. Paper");
		System.out.println("3. Scissors");
		System.out.println("4. Quit");
	}
	
	public static int validateInput(String st)
	{
		Scanner keyboard = new Scanner(System.in);
		int num = 0;
		while(true)
		{
			try
			{
				do
				{
					System.out.print(st);
					num = Integer.parseInt(keyboard.nextLine());
					if(num <= 0 && num > 5)
						System.out.println("Wrong Value! Enter a valid choice!");
				}
				while(num <= 0 && num > 5);
			}
			catch(NumberFormatException nfe)
			{
				System.out.println("Wrong Value! Enter a valid choice!");
				continue;
			}
			return num;
		}
	}
	
}
