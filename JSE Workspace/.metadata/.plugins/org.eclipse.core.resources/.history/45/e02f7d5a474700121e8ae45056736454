import java.util.Scanner;

class Student
{
	private String name;
	private int[] grades;
	private int gradesNum;
	
	public Student(String n, int testNum, int[] s)
	{
		grades = s;
		name = n;
		gradesNum = testNum;
	}
	
	public void getName()
	{
		System.out.println(name);
	}
	
	public void getScores()
	{
		System.out.print("List of scores: ");
		for(int i = 0; i < gradesNum; i++)
			System.out.print(grades[i] + " ");
		System.out.println();
	}
	
	public void getAverage()
	{
		double sum = 0;
		for(int i = 0; i < gradesNum; i++)
			sum += grades[i];
		System.out.printf("Average %.2f \n", sum/gradesNum);
		if(sum/gradesNum > 89 && sum/gradesNum < 200)
			System.out.println("You got A! ");
		else if(sum/gradesNum > 79 && sum/gradesNum <= 89)
			System.out.println("You got B! ");
		else if(sum/gradesNum >= 65 && sum/gradesNum <= 79)
			System.out.println("You got C! ");
		else
			System.out.println("You Failed!");
	}
	
	public void removeLowestScore()
	{
		int low = 110;
		for(int i = 0; i < gradesNum; i++)
			if(grades[i] < low)
				low = grades[i];
		
		if(gradesNum >= 2)
		{
			System.out.printf("The lowest grade %d will be excluded from the average!\n", low);
			gradesNum--;
			removeLowestScore(low);
		}
		else
			System.out.println("No score will be removed! ");
		
		
	}
	
	public void removeLowestScore(int value)
	{
		int i;
		for(i = 0; i < gradesNum; i++)
			if(grades[i] == value)
				break;
			for(int j = i; j < gradesNum; j++)
				grades[j] = grades[j + 1];
			getScores();
			getAverage();
	}
}

public class Test 
{
	
	static Scanner keyboard = new Scanner(System.in);
	
	public static void main(String[] args) 
	{	
		int studNum = setStudNum(); // get the number of students
		Student[] student = new Student[studNum]; // create an array of student objects
		
		for(int i = 0; i < studNum; i++){
			
			String name = setStudName(); // set student's name
			int testNum = setTestNum(); // set a number of test scores, size of the scores array
			int[] scores = new int[testNum]; // create an array containing student scores
			for(int j = 0; j < testNum; j++){
				scores[j] = setGrade(j);
			}
			student[i] = new Student(name, testNum, scores); // pass the following values to the Student Constructor
			System.out.println();
		}
		
		for(int i = 0; i < studNum; i++) // obtain the following information from the student object
		{
			student[i].getName();
			student[i].getScores();
			student[i].getAverage();
			student[i].removeLowestScore();
			System.out.println();
		}
			
	}
	
	public static int setStudNum()
	{
		System.out.print("How many students in the class? ");
		String st = keyboard.nextLine();
		return Integer.parseInt(st);
	}
	
	public static String setStudName()
	{
		System.out.print("Enter student's name: ");
		return keyboard.nextLine();	
	}
	
	public static int setTestNum()
	{
		System.out.print("How many grades is to be entered? ");
		String str = keyboard.nextLine();
		return Integer.parseInt(str);
	}
	
	public static int setGrade(int i)
	{
		System.out.print("Grade " + (i + 1)+ ": "); // set grades and add them to an array
		String sc = keyboard.nextLine();
		return Integer.parseInt(sc);
	}
	
}
