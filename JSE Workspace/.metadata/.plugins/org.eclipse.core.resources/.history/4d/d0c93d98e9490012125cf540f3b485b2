import java.util.Scanner;

class Grade
{
	private double score;
	
	public Grade(int s)
	{
		score = s;
	}
	
	public double getScore()
	{
		return score;
	}
	
	public char getGrade()
	{
		char grade = ' ';
		if(score >89)
			grade = 'A';
		else if(score >79 && score <= 89)
			grade = 'B';
		else if(score >65 && score <= 79)
			grade = 'C';
		else
			grade = 'D';
		return grade;	
	}
}

public class Inheritance 
{
	public static Scanner keyboard = new Scanner(System.in);
	
	public static void main(String[] args) 
	{	
		int score = validateInput("What is your score? ");
		Grade grade = new Grade(score);
		System.out.println("Your score is " + grade.getScore() + "! Your letter grade is " + grade.getGrade() + "!");
	}

	public static int validateInput(String s)
	{
		int n = 0;
		while(true){
			try
			{
				do{
					System.out.print(s);
					n = Integer.parseInt(keyboard.nextLine());
					if(n <= 0)
						System.out.println("Wrong Value! Try Again!");
				}
				while(n <= 0);
			}
			catch(NumberFormatException nfe)
			{
					System.out.println("Wrong Value! Try Again!");
					continue;
			}
			return n;
		}
	}
}
