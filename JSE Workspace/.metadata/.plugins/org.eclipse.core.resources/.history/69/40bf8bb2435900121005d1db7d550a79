
public class PointApp
{
    public static void main(String[] args)
    {
    	System.out.println("Move 4 discs from Peg 1 to Peg 3 using a temporary Peg 2" + moveDiscs(4, 1, 3, 2));
    }
    
public static void moveDiscs(int numDiscs, int fromPeg, int toPeg, int tempPeg)
{
	if(numDiscs > 0)
	{
		moveDiscs(numDiscs - 1, fromPeg, tempPeg, toPeg);
		System.out.println("Move discs from peg" + fromPeg + " to Peg " + toPeg);
		moveDiscs(numDiscs - 1, tempPeg, toPeg, fromPeg);
	}
}
}