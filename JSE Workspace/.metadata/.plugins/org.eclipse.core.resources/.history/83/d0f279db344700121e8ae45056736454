import java.util.Scanner;

class Student
{
	private String name;
	private int[] grades;
	
	public Student(String n, int[] s)
	{
		grades = s;
		name = n;
	}
	
	public void getName()
	{
		System.out.println(name);
	}
	
	public void getScores()
	{
		for(int i : grades)
			System.out.print(i + " ");
		System.out.println();
	}
	
	public void getAverage()
	{
		int sum = 0;
		for(int i = 0; i < grades.length; i++)
			sum += grades[i];
		System.out.printf("Average %d \n", sum/grades.length);
	}
	
	public void removeLowestScore()
	{
		System.out.println();
	}
}

public class Test 
{
	
	public static void main(String[] args) 
	{	
		Scanner keyboard = new Scanner(System.in);
		System.out.print("How many students in the class? ");
		String st = keyboard.nextLine();
		int studNum = Integer.parseInt(st);
		
		Student[] student = new Student[studNum];
		for(int i = 0; i < studNum; i++){
			
			System.out.print("Enter student's name: ");
			String name = keyboard.nextLine();	
			
			int[] scores = new int[3];
			for(int j = 0; j < 3; j++){
				System.out.print("Grade " + (j + 1)+ ": ");
				String sc = keyboard.nextLine();
				scores[j] = Integer.parseInt(sc);
			}
			student[i] = new Student(name, scores);
			System.out.println();
		}
		
		for(int i = 0; i < studNum; i++)
		{
			student[i].getName();
			student[i].getScores();
			student[i].getAverage();
			student[i].removeLowestScore();
			student[i].getAverage();
		}
			
	}
}
