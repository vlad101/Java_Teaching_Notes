public class FindCharApp 
{
	public static void main(String[] args) 
	{
		String st = "String";
		if(findChar(st, 'g'))
			System.out.println("The character is found!");
		else
			System.out.println("The character could not be found");
	}
	
	public static boolean findChar(String s, char c)
	{
		int min = 0;
		if(s.charAt(min) == c)
			return true;
		else
		{
			min++;
			findChar(s , c);
		}
		return false;
	}
}
