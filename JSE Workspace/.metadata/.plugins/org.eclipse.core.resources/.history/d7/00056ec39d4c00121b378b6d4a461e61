import java.util.Scanner;
import java.util.Random;
public class Test{
	public static void main(String[] args){
		Scanner keyboard = new Scanner(System.in);
		Random random = new Random();
		int guess, numRand = random.nextInt(5), count = 0;
		do{
				count++;
				System.out.print("Guess a number from 0 to 5: ");
				guess = Integer.parseInt(keyboard.nextLine());
				while(guess < 0 || guess > 6){
					System.out.print("The number should be from 0 to 5! Try Again! ");
					guess = Integer.parseInt(keyboard.nextLine());
				}
				if(guess != numRand){
					System.out.print("Try Again! ");
				}
				else
					System.out.print("You guessed correctly! The number was " + numRand + "! ");
				System.out.println("That took you " + count + " guesses");
		}while(guess != numRand);
	}
}

