import java.util.Scanner;
import java.util.Random;

class Player
{
	private String name;
	private int dieValue1, dieValue2;
	
	public Player(String n)
	{
		name = n;
	}
	
	public void setDieValue()
	{
		Die die1 = new Die();
		Die die2 = new Die();
		dieValue1 = die1.rollDice();
		dieValue2 = die2.rollDice();
	}
	
	public int getDieValue1()
	{
		return dieValue1;
	}
	
	public int getDieValue2()
	{
		return dieValue2;
	}
	
	public int getTotalDieValue()
	{
		return (getDieValue1() + getDieValue2());
	}
	
	public String getName()
	{
		return name;
	}
	
}

class Die
{
	
	public int rollDice()
	{
		Random random = new Random();
		return random.nextInt(5) + 1;
	}
}


public class TwentyOneApp {
	
	public static Scanner keyboard = new Scanner(System.in);

	public static void main(String[] args) 
	{
		
		System.out.println("*************Twenty-One!*************");
		
		String input = " ";
		int playersNum = validateInput("Enter the number of players: ");
		Player[] players = new Player[playersNum];
		for(int i = 0; i < playersNum; i++)
		{
			System.out.printf("Enter Player %d name: \n", (i + 1));
			String name = keyboard.nextLine();
			players[i] = new Player(name);
		}
		
		// for each player
		
		for(int i = 0; i < playersNum; i++){
			int total = 0;
				do
				{
					System.out.println("Player " + players[i].getName() + " rolls the die!");
					players[i].setDieValue();
					System.out.println("The Just Rolled: " + players[i].getTotalDieValue());
					total += players[i].getTotalDieValue();
					System.out.println("Your total amount of points so far is : " + total);
					System.out.println("Do you want to continue? ");
					input = keyboard.nextLine();
				}
				while(input.toLowerCase().charAt(0) == 'y' || input.toLowerCase().charAt(0) == 'n');
				{
					System.out.print("Wrong input! Try again! Do you want to continue? ");
					input = keyboard.nextLine();
				}
				
				if(input.toLowerCase().charAt(0) == 'y')
				{
					System.out.println("You Entered Yes!");
				}
				else
					System.out.println("You Entered No! Thanks for playing!");
		}
	}
	
		
	public static int validateInput(String st)
	{
		int num = 0;
		while(true)
		{
			try
			{
				do
				{
					System.out.print(st);
					num = Integer.parseInt(keyboard.nextLine());
					if(num <= 0)
						System.out.println("Wrong Value! Try again!");
				}
				while(num <= 0);
			}
			catch(NumberFormatException nfe)
			{
				System.out.println("Wrong Value! Try again!");
				continue;
			}
			return num;
		}
	}

}
